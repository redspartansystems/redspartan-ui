{
  "name": "redspartan-ui-build",
  "version": "1.0.0",
  "description": "Build tools for RedSpartan UI",
  "scripts": {
    "build-css": "sass src/RedSpartan.UI/Styles/main.scss src/RedSpartan.UI/wwwroot/css/redspartan.css --style=expanded --source-map --watch",
