@page "/"
@namespace RedSpartan.UI.Demo.Components.Pages

<PageTitle>RedSpartan UI Demo</PageTitle>

<h1>Welcome to RedSpartan UI</h1>

<p>Your Blazor component library is working!</p>

<div style="margin-top: 2rem;">
    <h3>Button Examples</h3>
    <div style="display: flex; gap: 1rem; margin-top: 1rem;">
        <RsButton Variant="ButtonVariant.Primary">Primary Button</RsButton>
        <RsButton Variant="ButtonVariant.Secondary">Secondary Button</RsButton>
        <RsButton Variant="ButtonVariant.Ghost">Ghost Button</RsButton>
    </div>
</div>

<div style="margin-top: 2rem;">
    <h3>Button Sizes</h3>
    <div style="display: flex; gap: 1rem; margin-top: 1rem; align-items: center;">
        <RsButton Size="ButtonSize.Small">Small</RsButton>
        <RsButton Size="ButtonSize.Medium">Medium</RsButton>
        <RsButton Size="ButtonSize.Large">Large</RsButton>
    </div>
</div>
